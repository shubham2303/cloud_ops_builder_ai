<% @batch ||= batch %>
<% r_count = @batch.batch_details_count %>
<% if @batch.count == r_count %>
<%= link_to "Download CSV", admin_batch_path(@batch)  %>
<% else %>
<%= "#{(r_count.to_f/(@batch.count)*100).floor}% completed" %>
<%= link_to "Refresh", admin_batch_path(@batch), remote: true %>
<% end %>