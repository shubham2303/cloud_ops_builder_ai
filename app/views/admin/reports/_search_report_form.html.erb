<%= form_tag({controller: "dashboard", action: "index"}, method: "get") do %>
    <%= radio_button_tag "type", "daily", (params['type']=='daily'||params['type']==nil)? true:false, :onclick => "this.form.submit();" %>
    <%= label_tag 'type_today', 'Today' %>
    <%= radio_button_tag "type", "monthly", params['type']== 'monthly'? true:false, :onclick => "this.form.submit();"  %>
    <%= label_tag 'type_this_month', 'This Month' %>
    <%= radio_button_tag "type", "yearly", params['type']== 'yearly'? true:false, :onclick => "this.form.submit();" %>
    <%= label_tag 'type_this_year', 'This Year' %>
<% end %>
